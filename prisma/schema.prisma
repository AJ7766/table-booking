generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id        Int      @id @default(autoincrement())
  name      String   @db.VarChar(255) // Customer's name
  email     String   @db.VarChar(255) // Customer's email
  guests    Int      // Number of guests (1â€“8)
  dateTime  DateTime // Date and time of the booking
  createdAt DateTime @default(now()) // Timestamp when booking was created
  canceled  Boolean  @default(false) // Indicates if the booking is canceled
}